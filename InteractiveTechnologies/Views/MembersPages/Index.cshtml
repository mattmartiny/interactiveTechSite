@model IEnumerable<InteractiveTechnologies.Models.MembersPage>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Members Page</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
          Role Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PageTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisplayDate)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.BodyText)
        </th>*@

        <th>
            @Html.DisplayNameFor(model => model.Image.ImageName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetRole.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PageTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisplayDate)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.BodyText)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Image.ImageName)
        </td>
        <td>
           
            @Html.ActionLink("User View", "Details", new { id = item.PageID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.PageID })
        </td>
    </tr>
}

</table>
