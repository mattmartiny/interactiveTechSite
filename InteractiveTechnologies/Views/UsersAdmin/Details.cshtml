@model InteractiveTechnologies.Models.ApplicationUser

@{
    ViewBag.Title = "Details";
}

<h2>Details.</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt>
            Name
        </dt>
        <dd>
            @Model.FirstName @Model.LastName
        </dd>
        <dt>
            Company
        </dt>
        <dd>
            @Model.Company
        </dd>
        <dt>
            Phone Number
        </dt>
        <dd>@Model.PhoneNumber</dd>
        <dt>Location</dt>
        <dd>@Model.City, @Model.State</dd>
        <dt>Interest</dt>
        <dd>@Model.ReasonForContact</dd>
        <dt>Confirmed?</dt>
        <dd>@Model.EmailConfirmed</dd>


        


    </dl>

    <br />
    <br />
</div>
<h4>List of roles for this user</h4>
@if (ViewBag.RoleNames.Count == 0)
{
    <hr />
    <p>No roles found for this user.</p>
}

<table class="table">

    @foreach (var item in ViewBag.RoleNames)
    {
        <tr>
            <td>
                @item
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>



