@model InteractiveTechnologies.Models.Product
@using InteractiveTechnologies.Models
@using InteractiveTechnologies.HTMLHelpers
@{

    InteractiveTechEntities db = new InteractiveTechEntities();
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var img2src = (from x in db.Products
                   from y in db.Images
                   where x.Image2ID == y.ImageID
                   select y.ImageSrc).SingleOrDefault();

    var img3src = (from x in db.Products
                   from y in db.Images
                   where x.Image3ID == y.ImageID
                   select y.ImageSrc).SingleOrDefault();

}


<div class="row">
    @Model.ProductName Details
    <hr />


    <div class="row">
        <div class="h1 col-md-8">@Html.DisplayFor(model => model.ProductName)</div>
        <div class="col-md-6">
            <img src="@Url.Content("~/Content/Images/DB_Images/" + Model.Image.ImageSrc)"
                 alt="@Model.ProductName" style="margin:0 auto; max-width:100%;" />
        </div>




        <div class="col-md-4">
            <p class="h3">Product Description</p>
            <p>
                @Html.DisplayFormattedData(Model.ProductDescription)
            </p>
            @if (Request.IsAuthenticated)
            {

                if (Model.Download != null)
                {
                    <p>
                        <a href="@Url.Content("~/Content/Downloads" + Model.Download)" download>
                            Download Information
                        </a>
                    </p>
                }
                else
                {
                    <p>&nbsp;</p>
                }

            }
            else
            {
                <p>&nbsp;</p>

            }
        </div>

    </div>
    </div>



    <div class="row">
        <div class="col-md-6">
            @if (Model.Image2ID != null)
            {


                <a class="image-popup-no-margins" href="@Url.Content("~/Content/Images/DB_Images/" + img2src)">
                    <img src="@Url.Content("~/Content/Images/DB_Images/" + img2src)" alt="@Model.ProductName" class="productThumb" />
                </a>

            }
            else
            {<p>&nbsp;</p>}
            @if (Model.Image3ID != null)
            {


                <a class="image-popup-no-margins" href="@Url.Content("~/Content/Images/DB_Images/" + img3src)">
                    <img src="@Url.Content("~/Content/Images/DB_Images/" + img3src)" alt="@Model.ProductName" class="productThumb" />
                </a>

            }
            else
            {<p>&nbsp;</p>}


        </div>





        <div class="col-md-4" style="padding-top:2em;">
            <p>@Html.DisplayNameFor(model => model.Category.CategoryName):</p>
            <p style="font-size:125%;">@Model.Category.CategoryName</p>

        </div>
    </div>





<br />
